@model IEnumerable<Department>

@{
    ViewData["Title"] = "Index";
}
@if(Model.Count()>0){
<table class="table">
    <thead>
        <tr>

                <th scope="col"> @Html.DisplayNameFor(D => D.code)</th>
                <th scope="col">@Html.DisplayNameFor(D => D.name)</th>
                <th scope="col">@Html.DisplayNameFor(D => D.creatAt)</th>
                <th scope="col">Details</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody> 
            @foreach (var department in Model)
            {
                <tr>
                    <th scope="row">@department.code</th>
                    <td>@department.name</td>
                    <td>@department.creatAt</td>
                    <td>
                        <a asp-action="Details" asp-route-id="department.id" class="btn btn-warning">
                         <i class="fas fa-eye"> details</i>
                        </a>
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-id="department.id" class="btn btn-success">
                            <i class="fas fa-edit"> Update</i>
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="department.id" class="btn btn-danger">
                            <i class="fas fa-trash"> Delete</i>
                        </a>
                    </td>
            
        </tr>}
       
    </tbody>
</table>}
else
{
    <div class="mt-5 alert alert-warning">
        <h2>there is no department</h2>

    </div>
}

